<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="benyamephrem.frameshift.Activities.SinglePlayerRedirect"
                android:background="@drawable/bg_gradient2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player _ Wins!"
        android:id="@+id/playerThatWonTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:textColor="#0099CC"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerThatWonTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/gameStats"
        android:background="@drawable/rectangle2"
        android:weightSum="100"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/Player1Stats"
            android:background="#00ffffff"
            android:layout_marginLeft="50dp"
            android:weightSum="120">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Player 1 :"
                android:id="@+id/Player1TextView"
                android:layout_weight="20"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:textColor="#FF000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Wins:"
                android:id="@+id/player1WinsTextView"
                android:layout_weight="20"
                android:textColor="#FF000000"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="---"
                android:id="@+id/player1Wins"
                android:layout_weight="20"
                android:textColor="#FF000000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Points:"
                android:id="@+id/player1PointsTextView"
                android:layout_weight="20"
                android:textColor="#FF000000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="---"
                android:id="@+id/player1Points"
                android:layout_weight="20"
                android:textColor="#FF000000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Accuracy:"
                android:id="@+id/player1AccuracyTextView"
                android:textSize="15sp"
                android:textColor="#FF000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="---"
                android:id="@+id/player1Accuracy"
                android:textSize="15sp"
                android:textColor="#FF000000"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="120"
            android:layout_weight="50"
            android:id="@+id/Player2Stats"
            android:background="#00ffffff"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Player 2 :"
                android:id="@+id/Player2TextView"
                android:layout_weight="20"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:textColor="#FF000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Wins:"
                android:id="@+id/player2WinsTextView"
                android:layout_weight="20"
                android:textColor="#FF000000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="---"
                android:id="@+id/player2Wins"
                android:layout_weight="20"
                android:textColor="#FF000000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Points:"
                android:id="@+id/player2PointsTextView"
                android:layout_weight="20"
                android:textColor="#FF000000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="---"
                android:id="@+id/player2Points"
                android:layout_weight="20"
                android:textColor="#FF000000"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Accuracy:"
                android:id="@+id/player2AccuracyTextView"
                android:textSize="15sp"
                android:textColor="#FF000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="---"
                android:id="@+id/player2Accuracy"
                android:textSize="15sp"
                android:textColor="#FF000000"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/gameStats"
    android:layout_centerHorizontal="true"
    android:weightSum="100"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:id="@+id/topButtons"
        android:weightSum="100">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/playAgainButton"
            android:layout_weight="90"
            android:background="@drawable/green_button"
            android:layout_marginLeft="90dp"/>


        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/turnOffAds"
            android:background="@drawable/circle2"
            android:text="Ads"
            android:textColor="#ff606060"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:id="@+id/bottomButtons"
        android:weightSum="100"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/homeButton"
            android:layout_weight="35"
            android:background="@drawable/gray_button"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button3"
            android:layout_weight="30"
            android:background="@drawable/purple_button"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button4"
            android:layout_weight="35"
            android:background="@drawable/light_blue_button"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>

</RelativeLayout>