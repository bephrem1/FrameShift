<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="benyamephrem.frameshift.Activities.MainActivity"
                android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Frame Shift"
        android:id="@+id/gameTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textSize="50dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double Player"
                android:id="@+id/doublePlayerButton"
                android:layout_weight="50"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single player"
                android:id="@+id/singlePlayerButton"
                android:layout_weight="50"/>
        </LinearLayout>

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Tilt Mode"
            android:id="@+id/tiltModeButton"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:paddingBottom="10dp">

        <Button
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:id="@+id/leaderboardButton"
            android:layout_gravity="left"
            android:background="@drawable/purple_button"
            android:layout_marginBottom="15dp"/>

        <Button
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:id="@+id/rateButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/red_button"
            android:layout_marginBottom="15dp"
            android:text="RATE"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tweetButton"
                android:layout_weight="50"
                android:background="@drawable/light_blue_button"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adsButton"
                android:layout_weight="50"
                android:background="@drawable/light_gray_button"
                android:text="Ads"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
